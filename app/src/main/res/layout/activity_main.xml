<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        style="@style/parent_linearlayout"
        tools:context="com.example.android.booklistingapp.MainActivity">
        <LinearLayout
            style="@style/search_linearlayout">
            <EditText
                android:id="@+id/search_text"
                style="@style/search_edit_text"
                />
            <ImageView
                android:id="@+id/search_click"
                style="@style/search_image_view"/>
        </LinearLayout>
        <TextView
            android:id="@+id/hint_text_view"
            android:text="@string/search_hint"
            style="@style/hint_text_view"/>
        <RelativeLayout
            style="@style/recycler_relative_layout">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_list"
                style="@style/recycler_view" />
            <View
                style="@style/divider_view"
                />

            <TextView
                android:id="@+id/problemText"
                style="@style/problem_text"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/progress_bar"/>

        </RelativeLayout>

    </LinearLayout>

</layout>
